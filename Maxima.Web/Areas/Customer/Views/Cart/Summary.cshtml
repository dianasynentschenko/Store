@model Maxima.Models.ViewModels.ShoppingCartVM
@using Microsoft.Extensions.Options
@inject IOptions<Maxima.Utility.StripeSettings> Stripe
<form method="post">
    <br />
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-6 pb-4">
                <div class="row">
                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                        <span class="product_card_secondary_text">SHIPPING DETAILS</span>
                    </h4>
                </div>
                <div class="row my-1 mt-4">
                    <div class="col-3 product_card_secondary_text">
                        <label>Name</label>
                    </div>
                    <div class="col-9">
                        <input asp-for="OrderHeader.Name" class="form-control-transparent" />
                        <span asp-validation-for="OrderHeader.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row my-1 mt-4">
                    <div class="col-3 product_card_secondary_text">
                        <label>Phone</label>
                    </div>
                    <div class="col-9">
                        <input asp-for="OrderHeader.PhoneNumber" class="form-control-transparent" />
                        <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="row my-1 mt-4">
                    <div class="col-3 product_card_secondary_text">
                        <label>Address</label>
                    </div>
                    <div class="col-9">
                        <input asp-for="OrderHeader.StreetAddress" class="form-control-transparent" />
                        <span asp-validation-for="OrderHeader.StreetAddress" class="text-danger"></span>
                    </div>
                </div>
                <div class="row my-1 mt-4">
                    <div class="col-3 product_card_secondary_text">
                        <label>City</label>
                    </div>
                    <div class="col-9">
                        <input asp-for="OrderHeader.City" class="form-control-transparent" />
                        <span asp-validation-for="OrderHeader.City" class="text-danger"></span>
                    </div>
                </div>
                <div class="row my-1 mt-4">
                    <div class="col-3 product_card_secondary_text">
                        <label>State</label>
                    </div>
                    <div class="col-9">
                        <input asp-for="OrderHeader.State" class="form-control-transparent" />
                        <span asp-validation-for="OrderHeader.State" class="text-danger"></span>
                    </div>
                </div>
                <div class="row my-1 mt-4">
                    <div class="col-3 product_card_secondary_text">
                        <label>Postal Code</label>
                    </div>
                    <div class="col-9">
                        <input asp-for="OrderHeader.PostalCode" class="form-control-transparent" />
                        <span asp-validation-for="OrderHeader.PostalCode" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-5 offset-lg-1">
                <h4 class="d-flex justify-content-between align-items-center mb-3 product_card_secondary_text">
                    <span class="product_card_secondary_text">ORDER SUMMARY</span>
                </h4>
                <ul class="mb-3">
                    @foreach (var details in Model.ListCart)
                    {
                        <li class="border-0 bg-transparent d-flex justify-content-between">
                            <div>
                                <h6 class="my-0 product_card_main_text">@details.Product.Name</h6>
                                <small class="product_card_secondary_text" style="font-size:12px;">Qty @details.Count</small>
                            </div>
                            <span class="product_card_accent_text">@((details.Price).ToString()) $</span>
                        </li>
                    }

                    <li class="border-0 bg-transparent d-flex justify-content-between">
                        <small class="product_card_main_text">TOTAL PRICE</small>
                        <strong class="product_card_accent_text">@Model.OrderHeader.OrderTotal.ToString() $</strong>
                    </li>
                </ul>

                <li class=" border-0 bg-transparent col-12 col-md-3 d-flex justify-content-center pt-2">
                    <button type="submit" value="Place Order" class="btn btn-continue p-2">ORDER</button>
                </li>
            </div>
        </div>
    </div>

    <div class="card-footer bg-transparent border-0">
        <div class="row">
            <div class="col-12 col-md-8 pt-2">
                <p class="product_card_secondary_text" style="font-size:12px;">
                    Estimate Arrival Date:
                    @DateTime.Now.AddDays(3).ToShortDateString() - @DateTime.Now.AddDays(6).ToShortDateString()
                </p>
            </div>
        </div>
    </div>

</form>