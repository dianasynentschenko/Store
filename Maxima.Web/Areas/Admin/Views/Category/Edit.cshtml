@model Category

<form method="post" asp-action="Edit">
	<div class="p-3 mt-4">
		<div class="row pb-2">
			 <p class="product_card_secondary_text text-uppercase">
          edit category
        </p>
			
		</div>
		<div class="mb-3 product_card_main_text text-uppercase col-4">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="product_card_accent_text"></span>
		</div>
		<div class="mb-3 product_card_main_text text-uppercase col-4">
			<label asp-for="DisplayOrder"></label>
			<input asp-for="DisplayOrder" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="product_card_accent_text"></span>
		</div>
		<button type="submit" class="btn btn-continue text-uppercase col-2 p-2 mt-4">Update</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-continue text-uppercase col-2 p-2 mt-4">
			Back
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
