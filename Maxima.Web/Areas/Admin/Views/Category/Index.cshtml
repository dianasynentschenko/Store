@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-9">
            <p class="product_card_secondary_text text-uppercase">
           category
        </p>
		</div>
          <div class="col-3 top-0 end-0">
            <a asp-controller="Category" asp-action="Create" class="btn btn-continue text-uppercase">
                Create new category
			</a>
		</div>
	</div>
    <br /><br />

<table class="table table-striped table-hover" style="width:100%">
    <thead>
        <tr>
            <th class="product_card_secondary_text text-uppercase  ms-2">
                Category Name
			</th>
            <th class="product_card_secondary_text text-uppercase  ms-2">
                Display Order
			</th>
            <th></th>
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%" class="product_card_main_text text-uppercase ms-2 mt-3">
                    @obj.Name
				</td>
                <td width="30%" class="product_card_main_text text-uppercase ms-2 mt-3">
                    @obj.DisplayOrder
				</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-filter mx-2 d-flex justify-content-center mt-3"> <i class="bi bi-pencil-fill"></i></a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-filter mx-2 d-flex justify-content-center mt-3" ><i class="bi bi-trash-fill"></i></a>
					</div>
				</td>
			</tr>
        }
    </tbody>

</table>
</div>