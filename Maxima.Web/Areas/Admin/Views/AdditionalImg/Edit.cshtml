@model AdditionalImg

<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit AdditionalImg</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="AdditionalImgUrl"></label>
			<input asp-for="AdditionalImgUrl" class="form-control" />
			<span asp-validation-for="AdditionalImgUrl" class="text-danger"></span>
		</div>

		<button type="submit" class="btn text-black btn-primary" style="width:150px">Update</button>
		<a asp-controller="AdditionalImgUrl" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
